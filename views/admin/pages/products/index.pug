extends ../../layouts/default.pug
include ../../mixins/filter-status.pug

block main
  h1 Product Management Page

  .card.mb-3
  .card-header Bộ lọc và tìm kiếm
  .card-body
    .d-flex.justify-content-between.align-items-center.flex-wrap.gap-3
      div(class="d-flex flex-wrap gap-2")
        +filter-status(filterStatus)
      div
        form(id="form-search")
          .input-group
            input(
              type="text"
              name="keyword"
              class="form-control"
              placeholder="Nhập từ khóa..."
              value=keyword
            )
            button(
              class="btn btn-success"
              type="submit"
            ) Tìm kiếm



  .card.mb-3
  .card-header Danh sách sản phẩm
  .card-body
    table.table.table-hover.table-sm
      thead
        tr
          th STT
          th Image
          th Title
          th Price
          th Status
          th Action
      tbody
        each item, index in products
          tr
            td #{index + 1}
            td
              img(
                src=item.thumbnail
                alt="Product Image"
                width="100"
                height="auto"
              )
            td #{item.title}
            td $#{item.price}
            td
              if item.status == 'active'
                a.badge.bg-success(href="#") Active
              else
                a.badge.bg-danger(href="#") Inactive
            td
              button.btn.btn-warning.btn-sm Edit
              button.btn.btn-danger.btn-sm Delete
